<Window x:Class="WpfAppPractwork1.WindowPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPractwork1"
        mc:Ignorable="d" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" Height="70"
        Title="Авторизация" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox Name="passwordBox" materialDesign:HintAssist.Hint="Введите пароль" MinWidth="250" Height="30" Margin="0,-3,0,27" />
        <Button Height="20"  FontSize="10" IsDefault="True" Click="Accept_Click" MinWidth="60" BorderBrush="White" Background="Gray" Width="15" Content="Ок" Style="{DynamicResource MaterialDesignToolButton}" Margin="115,27,75,7"/>
        <Button Height="20" FontSize="10" IsCancel="True" MinWidth="60" Background="Gray" BorderBrush="White" Width="15" Content="Отмена" Style="{DynamicResource MaterialDesignToolButton}" Margin="180,27,10,7" />

    </Grid>
</Window>
